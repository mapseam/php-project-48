#!/usr/bin/env php

<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function Gendiff\Differ\genDiff;

$usageDoc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

/*$format = 'stylish';

if (isset($argv[1])) {
    if ($argv[1] === '-h' || $argv[1] === '--help') {
        print_r($usageDoc . PHP_EOL);
    }

    if ($argv[1] === '-v' || $argv[1] === '--version') {
        print_r("gendiff 1.0" . PHP_EOL);
    }

    if ($argv[1] === '--format') {
        if (isset($argv[2])) {
            $format = $argv[2];
        }
    }
}*/

$params = [
    'version'=>'gendiff 1.0'
  ];

$args = Docopt::handle($usageDoc, $params);

$filePath1 = $args->args['<firstFile>'];
$filePath2 = $args->args['<secondFile>'];
$format = $args->args['--format'];

echo genDiff($filePath1, $filePath2, $format = "stylish");
